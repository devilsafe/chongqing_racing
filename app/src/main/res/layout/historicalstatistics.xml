<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/view_toolbar"
        />
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_below="@+id/tool_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:text="第"/>
        <TextView
            android:id="@+id/tv_qishu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/darkorange"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:text="期"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:text="距离开奖"/>
        <TextView
            android:id="@+id/tv_shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/darkorange"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_shijian"
        android:layout_below="@+id/ll_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="距"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_jieguo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:text="开奖时间:"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_shijian1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/number"
        android:layout_below="@+id/ll_shijian"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_num1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg_live_number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_num2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:gravity="center"
                android:background="@drawable/bg_live_number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_num3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:gravity="center"
                android:background="@drawable/bg_live_number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_num4"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_live_number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_num5"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg_live_number"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mingci"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/number"
        android:background="@color/darkorange">
        <TextView
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="日期"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_height="35dp" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="第一球"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_height="35dp" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="第二球"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_height="35dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mingci"
        android:id="@+id/data"
        android:background="@color/colorGray">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="fill_parent"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_height="35dp" />
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="大"
                android:layout_margin="3dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg1"/>
            <TextView
                android:id="@+id/tv_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="小"
                android:layout_margin="5dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg2"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="单"
                android:layout_margin="3dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg3"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="双"
                android:layout_margin="3dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg4"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="大"
                android:layout_margin="5dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg1"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="小"
                android:layout_margin="3dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg2"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="单"
                android:layout_margin="3dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg3"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="双"
                android:layout_margin="3dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/bg4"/>
            </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="0.5dp"
        android:layout_below="@+id/data"
        android:layout_height="fill_parent"
        android:background="@color/bg_indicator_point_selected"></View>
        <ListView
            android:layout_below="@+id/data"
            android:id="@+id/recycler_history_statistics"
            android:layout_width="match_parent"
            android:layout_marginTop="0.5dp"
            android:layout_above="@+id/layoutNa"
            android:layout_height="wrap_content">
        </ListView>
</RelativeLayout>
