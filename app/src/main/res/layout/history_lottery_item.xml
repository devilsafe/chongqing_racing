<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="50dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="25dp"
            android:text="万"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="25dp"
            android:text="千"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:id="@+id/tv_4"
            android:layout_width="25dp"
            android:text="百"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:id="@+id/tv_5"
            android:layout_width="25dp"
            android:text="十"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <TextView
            android:id="@+id/tv_6"
            android:layout_width="25dp"
            android:text="个"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_indicator_point_selected"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_7"
                    android:layout_width="fill_parent"
                    android:text="前三"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="fill_parent" />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/bg_indicator_point_selected"></View>
                <TextView
                    android:id="@+id/tv_8"
                    android:layout_width="fill_parent"
                    android:text="中三"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="fill_parent" />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/bg_indicator_point_selected"></View>
                <TextView
                    android:id="@+id/tv_9"
                    android:layout_width="fill_parent"
                    android:text="后三"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="fill_parent" />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/bg_indicator_point_selected"></View>
                <TextView
                    android:id="@+id/tv_10"
                    android:layout_width="fill_parent"
                    android:text="龙虎"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="@color/bg_indicator_point_selected"></View>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_weight="2"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_11"
                    android:layout_width="fill_parent"
                    android:text="18"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="fill_parent" />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/bg_indicator_point_selected"></View>
                <TextView
                    android:id="@+id/tv_12"
                    android:layout_width="fill_parent"
                    android:text="双"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="fill_parent" />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/bg_indicator_point_selected"></View>
                <TextView
                    android:id="@+id/tv_13"
                    android:layout_width="fill_parent"
                    android:text="小"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_indicator_point_selected"></View>
</LinearLayout>
