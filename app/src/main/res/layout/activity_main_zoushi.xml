<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
    <include
        layout="@layout/view_toolbar"
        />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <LinearLayout
        android:id="@+id/layoutNa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/darkgray"/>

        <RadioGroup
            android:id="@+id/rgBottomBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/one"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="3.0dip"
                android:drawableTop="@drawable/selector_activity_tab_luzhu_one"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="大小路珠"
                android:textColor="@color/main_bottom_bar_textcolor_selector"
                android:textSize="14.0sp"/>

            <RadioButton
                android:id="@+id/two"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:button="@null"
                android:drawablePadding="3.0dip"
                android:drawableTop="@drawable/selector_activity_tab_luzhu_two"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="单双路珠"
                android:textColor="@color/main_bottom_bar_textcolor_selector"
                android:textSize="14.0sp"/>

            <RadioButton
                android:id="@+id/three"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:button="@null"
                android:drawablePadding="3.0dip"
                android:drawableTop="@drawable/selector_activity_tab_luzhu_three"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="总和路珠"
                android:textColor="@color/main_bottom_bar_textcolor_selector"
                android:textSize="14.0sp"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
