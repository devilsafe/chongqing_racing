<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/view_toolbar"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:text="第"/>
        <TextView
            android:id="@+id/tv_qishu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/darkorange"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:text="期"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:text="距离开奖"/>
        <TextView
            android:id="@+id/tv_shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/darkorange"
            android:textStyle="bold"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/darkgray"></View>
        <!--最外层-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_line"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="18dp"
                    android:layout_height="fill_parent"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="号\n码"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:background="@color/darkgray"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:text="第一球"/>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/darkgray"></View>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:text="总\n开"/>
                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="fill_parent"
                                android:background="@color/darkgray"></View>
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:layout_margin="5dp"
                                android:textSize="12sp"
                                android:text="未\n开"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="fill_parent"
                        android:background="@color/darkgray"></View>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:text="第二球"/>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/darkgray"></View>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:text="总\n开"/>
                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="fill_parent"
                                android:background="@color/darkgray"></View>
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:text="未\n开"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="fill_parent"
                        android:background="@color/darkgray"></View>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:text="第三球"/>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/darkgray"></View>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:text="总\n开"/>
                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="fill_parent"
                                android:background="@color/darkgray"></View>
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:text="未\n开"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="fill_parent"
                        android:background="@color/darkgray"></View>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:text="第四球"/>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/darkgray"></View>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:text="总\n开"/>
                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="fill_parent"
                                android:background="@color/darkgray"></View>
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:text="未\n开"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="fill_parent"
                        android:background="@color/darkgray"></View>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:text="第五球"/>
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/darkgray"></View>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:text="总\n开"/>
                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="fill_parent"
                                android:background="@color/darkgray"></View>
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:text="未\n开"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="fill_parent"
                        android:background="@color/darkgray"></View>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    <!--最外层-->
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/darkgray"></View>
    <!--多条数据-->
      <ListView
        android:id="@+id/recycler_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
